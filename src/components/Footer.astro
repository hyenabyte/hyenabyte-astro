---
import { BackToTop } from './BackToTop.tsx';
---

<footer class="container mainFooter prose">
  <BackToTop client:only />
  <p>
    <small>
      hyenabyte.dev 2025 -
      <a href="https://github.com/hyenabyte/hyenabyte.dev">source</a>
    </small>
  </p>
</footer>

<style>
  footer {
    height: auto;
    margin-top: 4rem;
    margin-bottom: 6rem;

    & > p {
      text-align: right;

      &::after {
        display: inline-block;
        position: relative;
        content: '';
        width: 16px;
        height: 16px;
        vertical-align: middle;
        background-color: var(--prose-links);

        mask-size: 16px;
        mask-position: 50% 50%;
